{
    "hosting": {
        "public": "_site",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "X-Content-Type-Options",
                        "value": "nosniff"
                    },
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": "*"
                    },
                    {
                        "key": "X-Frame-Options",
                        "value": "DENY"
                    },
                    {
                        "key": "X-XSS-Protection",
                        "value": "1; mode=block"
                    },
                    {
                        "key": "Referrer-Policy",
                        "value": "no-referrer"
                    },
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    },
                    {
                        "key": "Content-Security-Policy",
                        "value": "default-src 'self'; font-src fonts.gstatic.com; style-src 'self' fonts.googleapis.com;';"
                    }
                ]
            }
        ],
        "trailingSlash": false,
        "cleanUrls": true
    }
}